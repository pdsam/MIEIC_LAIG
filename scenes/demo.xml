<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="orthoBoi">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
        <ortho id="orthoBoi" near="0.1" far="500" left="-5" right="5" top="5" bottom="-5">
            <from x="30" y="15" z="30" />
            <to x="0" y="0" z="0" />
        </ortho>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="1" stacks="10" slices="3" />
        </primitive>
        <primitive id="demoTriangle">
            <triangle   x1="0" y1="0" z1="0"
                        x2="5" y2="0" z2="0"
                        x3="0" y3="0" z3="5" />
        </primitive>
        <primitive id="demoCylinder">
            <cylinder base="3" top="3" height="5" slices="20" stacks="4" />
        </primitive>
        <primitive id="demoTorus">
            <torus inner="1" outer="3" slices="10" loops="6" />
        </primitive>
        <primitive id="unitSquare">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
 
    </primitives>

    <components>
        <component id="topUnitCube">
            <transformation>
                <translate x="0" y="0.5" z="0" /> 
                <rotate axis="x" angle="-1.5708" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="demoTexture" length_s="1" length_t="1" />

            <children>
                <primitiveref id="unitSquare" />

             </children>

        </component>

        <component id="botUnitCube">
            <transformation>
                <translate x="0" y="-0.5" z="0" /> 
                <rotate axis="x" angle="1.5708" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="demoTexture" length_s="1" length_t="1" />

            <children>
                <primitiveref id="unitSquare" />

             </children>

        </component>

        <component id="backUnitCube">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
                <rotate axis="y" angle="3.14" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="demoTexture" length_s="1" length_t="1" />

            <children>
                <primitiveref id="unitSquare" />

             </children>

        </component>

        <component id="frontUnitCube">
            <transformation>
                <translate x="0" y="0" z="0.5" /> 
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="demoTexture" length_s="1" length_t="1" />

            <children>
                <primitiveref id="unitSquare" />

             </children>

        </component>

        <component id="rightUnitCube">
            <transformation>
                <translate x="-0.5" y="0" z="0" /> 
                <rotate axis="y" angle="-1.5708" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="demoTexture" length_s="1" length_t="1" />

            <children>
                <primitiveref id="unitSquare" />

             </children>

        </component>

        <component id="leftUnitCube">
            <transformation>
                <translate x="0.5" y="0" z="0" /> 
                <rotate axis="y" angle="1.5708" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="demoTexture" length_s="1" length_t="1" />

            <children>
                <primitiveref id="unitSquare" />

             </children>

        </component>

        <component id="unitCube">
            <transformation>
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>

            <texture id="demoTexture" length_s="1" length_t="1" />

            <children>
                <componentref id="topUnitCube" />
                <componentref id="botUnitCube" />
                <componentref id="leftUnitCube" />
                <componentref id="rightUnitCube" />
                <componentref id="frontUnitCube" />
                <componentref id="backUnitCube" />

             </children>

        </component>

        <component id="demoRoot">
            <transformation>
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        

    </components>
</lxs>